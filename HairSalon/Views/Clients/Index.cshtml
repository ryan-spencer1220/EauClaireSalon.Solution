@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1 class="display-4 lh-1 mb-4">Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet.</h3>
  <h3>Please ensure a stylist has been added before you add a client.</h3>
} 

@foreach (Client client in Model)
{
  <section class="bg-light">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center justify-content-lg-between">
            <div class="col-12 col-lg-5">
                <p class="lead fw-normal text-muted mb-5 mb-lg-0">@Html.ActionLink($"{client.FirstName}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</p>
            </div>
        </div>
    </div>
  </section>
}
<div class="col-12 col-lg-5">
  @Html.ActionLink("Add new client", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })
</div>