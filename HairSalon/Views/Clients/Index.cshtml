@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Item>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Description}", "Details", new { id = client.ItemId }) | @client.Category.Name</li>
}

<p>@Html.ActionLink("Add new client", "Create")</p>