@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1 class="display-4 lh-1 mb-4">Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

<ul>
  @foreach(Stylist stylist in Model)
  {
  <section class="bg-light">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center justify-content-lg-between">
            <div class="col-12 col-lg-5">
                <p class="lead fw-normal text-muted mb-5 mb-lg-0">@Html.ActionLink($"{stylist.Name}", "Details", new { id =stylist.StylistId })</p>
            </div>
        </div>
    </div>
  </section>
  }
</ul>
<div class="col-12 col-lg-5">
  @Html.ActionLink("Add new stylist", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })
  @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })
</div>

