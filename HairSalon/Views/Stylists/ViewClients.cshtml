@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Client>

<h3 class="display-4 lh-1 mb-4">Clients:</h3>

@if (Model.Count == 0)
{
  <h5>No clients for this stylist</h5>
}
<ul>
  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.FirstName}", "Details", "Clients", new { id = client.ClientId })</li>
  }
</ul>

  @Html.ActionLink("Add client", "Create", "Clients")
