@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2 class="display-4 lh-1 mb-4">Stylist Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>
<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)<h3>
<h3>@Html.ActionLink("See clients for this stylist", "ViewClients", new { id = Model.StylistId })</h3>

<div class="row justify-content-center">
  <div class="col-12 col-lg-4">
    @Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId }, htmlAttributes: new { @class = "btn btn-primary", @role="button" })
    @Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId }, htmlAttributes: new { @class = "btn btn-primary", @role="button" })
    @Html.ActionLink("Back to list", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })
  </div>
</div>