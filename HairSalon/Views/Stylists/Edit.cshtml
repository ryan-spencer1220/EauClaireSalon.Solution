@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2 class="display-4 lh-1 mb-4">Edit</h2>

<h5 class="display-4 lh-3 mb-4">Edit @Html.DisplayFor(model => model.Name)</h5>

@using (Html.BeginForm())
{
  <div class="lead fw-normal text-muted mb-5 mb-lg-0">
    @Html.HiddenFor(model => model.StylistId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name, new { @class = "form-control" })

    @Html.LabelFor(model => model.Specialty)
    @Html.EditorFor(model => model.Specialty, new { @class = "form-control" })

    <div class="col-12 col-lg-5">
      <input type="submit" value="Save" class="btn btn-primary"/>
    </div>
  </div>
}

<div class="col-12 col-lg-5"> 
  @Html.ActionLink("Back to list", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })
</div>

