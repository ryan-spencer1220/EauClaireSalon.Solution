@{
  Layout = "_Layout";
}
<section class="bg-light">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center justify-content-lg-between">
            <div class="col-12 col-lg-5">
                <h2 class="display-4 lh-1 mb-4">Welcome to Eau Claire's salon management system!</h2>
                <p class="lead fw-normal text-muted mb-5 mb-lg-0">This application allows hair professionals to create, read, update, and delete stylists & clients.</p>
            </div>
            <div class="col-sm-8 col-md-6">
                <div class="px-5 px-sm-0"><img class="img-fluid rounded-circle" src="https://source.unsplash.com/u8Jn2rzYIps/900x900" alt="..." /></div>
            </div>
          <div class="col-12 col-lg-5">
            @Html.ActionLink("See all clients", "Index", "Clients", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })
            @Html.ActionLink("See all stylists", "Index", "Stylists", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })
          </div>
        </div>
    </div>
</section>

